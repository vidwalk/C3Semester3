@page
@model RazorPagesContacts.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<body>
    <p>
        Enter your cat's name.
    </p>
    <div asp-validation-summary="All"></div>
    <ul>
        @foreach(var c in @Model.Cats)
        {
            <li>@c.Name</li>
        }
    </ul>
    <form method="POST">
        <div>Name: <input asp-for="Cat.Name" /></div>
        <div>Color: <input asp-for="Cat.Color" /></div>
        <div>Price: <input asp-for="Cat.Price" /></div>
        <div>FavoriteDish: <input asp-for="Cat.FavoriteDish" /></div>
        <input type="submit" />
    </form>
</body>
</html>
